	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"rootDir": ".",
		"types": ["node", "hardhat"]
	},
	"include": [
		"./scripts",
		"./test",
		"scripts",
		"./typechain-types",
		"./hardhat.config.ts"
	]
}
